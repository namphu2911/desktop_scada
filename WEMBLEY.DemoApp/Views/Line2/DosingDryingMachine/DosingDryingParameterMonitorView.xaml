<UserControl x:Class="WEMBLEY.DemoApp.Views.Line2.DosingDryingMachine.DosingDryingParameterMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WEMBLEY.DemoApp.Views.Line2.DosingDryingMachine"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Components="clr-namespace:WEMBLEY.DemoApp.Resources.Components" xmlns:dosingdryingmachine="clr-namespace:WEMBLEY.DemoApp.Core.Application.ViewModels.Line2.DosingDryingMachine;assembly=WEMBLEY.DemoApp.Core" d:DataContext="{d:DesignInstance Type=dosingdryingmachine:DosingDryingParameterMonitorViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1260"
             Background="{StaticResource ColorBackground}"
             Padding="10">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <prism:InvokeCommandAction Command="{Binding LoadMFCMonitorViewCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <materialDesign:DialogHost CloseOnClickAway="True" IsOpen="{Binding IsErrorMessageShowed}">
        <materialDesign:DialogHost.DialogContent>
            <Components:ErrorMessage Message="{Binding ErrorMessage}"/>
        </materialDesign:DialogHost.DialogContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock
                        Grid.Column="0" 
                        Style="{StaticResource LineLabel20}">
                        <Run Text="Mã Ref: "/>
                        <Run Text="{Binding HomeRefId, Mode=OneWay}"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock
                        Background="{StaticResource ColorPrimaryRed}"
                        Style="{StaticResource NoteBarLabel}"
                        Text="ALARM" Margin="0,0,0,5" />
                </StackPanel>
            </Grid>

            <TabControl Grid.Row="1"
                TabStripPlacement="Left">
                <TabItem Height="60" MaxWidth="800" Style="{StaticResource TabItemButtonStyle}">
                    <TabItem.Header >
                        <TextBlock Style="{StaticResource HeaderText}" Text="Dosing Station"/>
                    </TabItem.Header>
                    <materialDesign:Card
                         Background="{StaticResource ColorSurface}"
                         Margin="10,5,5,5">
                        <DataGrid
                              Style="{StaticResource MaterialDesignDataGrid}"
                              Background="{StaticResource ColorSurface}"
                              IsReadOnly="True"
                              ItemsSource="{Binding DosingEntries}"
                              AutoGenerateColumns="False"
                              SelectionUnit="FullRow"
                              SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Station" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Setting MinValue" Binding="{Binding MinValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Setting MaxValue" Binding="{Binding MaxValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Current Value" Binding="{Binding RealValue}" Width="0.7*">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAlarmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ColorPrimaryRed}"></Setter>
                                                    <Setter Property="Foreground" Value="{StaticResource ColorErrorOn}"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </TabItem>

                <TabItem Height="60" MaxWidth="800" Style="{StaticResource TabItemButtonStyle}">
                    <TabItem.Header >
                        <TextBlock Style="{StaticResource HeaderText}" Text="Drying 1 Station"/>
                    </TabItem.Header>
                    <materialDesign:Card
                         Background="{StaticResource ColorSurface}"
                         Margin="10,5,5,5">
                        <DataGrid
                              Style="{StaticResource MaterialDesignDataGrid}"
                              Background="{StaticResource ColorSurface}"
                              IsReadOnly="True"
                              ItemsSource="{Binding Drying1Entries}"
                              AutoGenerateColumns="False"
                              SelectionUnit="FullRow"
                              SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Station" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Setting MinValue" Binding="{Binding MinValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Setting MaxValue" Binding="{Binding MaxValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Current Value" Binding="{Binding RealValue}" Width="0.7*">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAlarmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ColorPrimaryRed}"></Setter>
                                                    <Setter Property="Foreground" Value="{StaticResource ColorErrorOn}"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </TabItem>

                <TabItem Height="60" MaxWidth="800" Style="{StaticResource TabItemButtonStyle}">
                    <TabItem.Header >
                        <TextBlock Style="{StaticResource HeaderText}" Text="Drying 2 Station"/>
                    </TabItem.Header>
                    <materialDesign:Card
                         Background="{StaticResource ColorSurface}"
                         Margin="10,5,5,5">
                        <DataGrid
                              Style="{StaticResource MaterialDesignDataGrid}"
                              Background="{StaticResource ColorSurface}"
                              IsReadOnly="True"
                              ItemsSource="{Binding Drying2Entries}"
                              AutoGenerateColumns="False"
                              SelectionUnit="FullRow"
                              SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Station" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Setting MinValue" Binding="{Binding MinValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Setting MaxValue" Binding="{Binding MaxValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Current Value" Binding="{Binding RealValue}" Width="0.7*">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAlarmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ColorPrimaryRed}"></Setter>
                                                    <Setter Property="Foreground" Value="{StaticResource ColorErrorOn}"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </TabItem>

                <TabItem Height="60" MaxWidth="800" Style="{StaticResource TabItemButtonStyle}">
                    <TabItem.Header >
                        <TextBlock Style="{StaticResource HeaderText}" Text="Robot Arm"/>
                    </TabItem.Header>
                    <materialDesign:Card
                         Background="{StaticResource ColorSurface}"
                         Margin="10,5,5,5">
                        <DataGrid
                              Style="{StaticResource MaterialDesignDataGrid}"
                              Background="{StaticResource ColorSurface}"
                              IsReadOnly="True"
                              ItemsSource="{Binding RobotArmEntries}"
                              AutoGenerateColumns="False"
                              SelectionUnit="FullRow"
                              SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Station" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Setting MinValue" Binding="{Binding MinValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Setting MaxValue" Binding="{Binding MaxValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Current Value" Binding="{Binding RealValue}" Width="0.7*">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAlarmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ColorPrimaryRed}"></Setter>
                                                    <Setter Property="Foreground" Value="{StaticResource ColorErrorOn}"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </TabItem>

                <TabItem Height="60" MaxWidth="800" Style="{StaticResource TabItemButtonStyle}">
                    <TabItem.Header >
                        <TextBlock Style="{StaticResource HeaderText}" Text="Others"/>
                    </TabItem.Header>
                    <materialDesign:Card
                         Background="{StaticResource ColorSurface}"
                         Margin="10,5,5,5">
                        <DataGrid
                              Style="{StaticResource MaterialDesignDataGrid}"
                              Background="{StaticResource ColorSurface}"
                              IsReadOnly="True"
                              ItemsSource="{Binding OthersEntries}"
                              AutoGenerateColumns="False"
                              SelectionUnit="FullRow"
                              SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Station" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Setting MinValue" Binding="{Binding MinValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Setting MaxValue" Binding="{Binding MaxValue}" Width="0.7*"/>
                                <DataGridTextColumn Header="Current Value" Binding="{Binding RealValue}" Width="0.7*">
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsAlarmed}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource ColorPrimaryRed}"></Setter>
                                                    <Setter Property="Foreground" Value="{StaticResource ColorErrorOn}"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </materialDesign:Card>
                </TabItem>
            </TabControl>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>
